{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "types": [
      "vite/client",
      "node"
    ],
    "paths": {
      "@/*": ["src/render/*", "src/main/*"],
      "root/*": ["/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ]
}
